		echo '<div class="col-md-2"><h4>'.$key.'</h4>';
		echo $property . '</div>';
	}	
} ?>
</div>

<br />

<div class="row">
	<div class="col-md-12">
		<h3>In Bezieung stehende Personen</h3>

PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#> ';

$properties = array(
	"Typ"		=> "type",
	"Datum"		=> "date",
	"Semester"	=> "semester",
	"Umfang"	=> "pagination",
	"Schlagwort"=> "keyword",
	"Signatur"	=> "shelfmark",
